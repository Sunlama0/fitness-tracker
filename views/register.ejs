<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .hidden {
            display: none;
        }

        .fade-in {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

        .fade-in.show {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</head>

<body class="bg-[#F2F2F2] flex flex-col min-h-screen">

    <!-- Navbar -->
    <%- include('partials/navbar') %>

        <!-- Contenu principal -->
        <div class="flex-grow flex items-center justify-center p-6">
            <div class="w-full max-w-2xl bg-white p-10 rounded-lg shadow-lg text-[#4A4A4A]">
                <h2 class="text-3xl font-bold text-center text-[#E30613] mb-6">Inscription</h2>

                <!-- Barre de progression -->
                <div class="relative w-full bg-gray-200 rounded-full h-2 mb-6">
                    <div id="progressBar"
                        class="absolute bg-[#E30613] h-2 rounded-full w-1/5 transition-all duration-300"></div>
                </div>

                <!-- Formulaire Multistep -->
                <form id="registerForm" action="/auth/register" method="POST" class="space-y-6">

                    <!-- Étape 1 : Informations de base -->
                    <div class="step fade-in show bg-[#F2F2F2] p-6 rounded-lg shadow-md" id="step-1">
                        <h3 class="text-lg font-semibold mb-4">Informations de base</h3>
                        <div class="grid grid-cols-2 gap-4">
                            <input type="text" name="firstName" placeholder="Prénom"
                                class="w-full border p-3 rounded-lg bg-white" required>
                            <input type="text" name="lastName" placeholder="Nom"
                                class="w-full border p-3 rounded-lg bg-white" required>
                        </div>
                        <input type="email" name="email" placeholder="Email"
                            class="w-full border p-3 rounded-lg bg-white mt-3" required>
                        <input type="password" name="password" placeholder="Mot de passe"
                            class="w-full border p-3 rounded-lg bg-white mt-3" required>
                        <input type="password" name="password2" placeholder="Confirmer le mot de passe"
                            class="w-full border p-3 rounded-lg bg-white mt-3" required>
                    </div>

                    <!-- Étape 2 : Informations personnelles -->
                    <div class="step fade-in hidden bg-[#F2F2F2] p-6 rounded-lg shadow-md" id="step-2">
                        <h3 class="text-lg font-semibold mb-4">Informations personnelles</h3>
                        <input type="date" name="birthDate" placeholder="Date de naissance"
                            class="w-full border p-3 rounded-lg bg-white" required>
                        <input type="text" name="city" placeholder="Ville"
                            class="w-full border p-3 rounded-lg bg-white mt-3" required>
                        <select name="gender" class="w-full border p-3 rounded-lg bg-white mt-3">
                            <option value="Homme">Homme</option>
                            <option value="Femme">Femme</option>
                            <option value="Autre">Autre</option>
                        </select>
                    </div>

                    <!-- Étape 3 : Objectifs & Données Physiques -->
                    <div class="step fade-in hidden bg-[#F2F2F2] p-6 rounded-lg shadow-md" id="step-3">
                        <h3 class="text-lg font-semibold mb-4">Objectifs & Données Physiques</h3>
                        <input type="number" name="weight" placeholder="Poids actuel (kg)"
                            class="w-full border p-3 rounded-lg bg-white" required>
                        <input type="number" name="height" placeholder="Taille (cm)"
                            class="w-full border p-3 rounded-lg bg-white mt-3" required>
                        <input type="number" name="initialWeight" placeholder="Poids de départ (kg)"
                            class="w-full border p-3 rounded-lg bg-white mt-3" required>
                        <input type="number" name="targetWeight" placeholder="Poids souhaité (kg)"
                            class="w-full border p-3 rounded-lg bg-white mt-3" required>
                    </div>

                    <!-- Étape 4 : Mode de vie -->
                    <div class="step fade-in hidden bg-[#F2F2F2] p-6 rounded-lg shadow-md" id="step-4">
                        <h3 class="text-lg font-semibold mb-4">Mode de Vie</h3>
                        <label class="block text-sm font-medium">Consommation journalière d'eau</label>
                        <select name="dailyWaterIntake" class="w-full border p-3 rounded-lg bg-white">
                            <option value="1L">1L</option>
                            <option value="2L">2L</option>
                            <option value="3L">3L</option>
                            <option value="4L+">4L+</option>
                        </select>

                        <label class="block text-sm font-medium mt-3">Préférences alimentaires</label>
                        <select name="dietaryPreference" class="w-full border p-3 rounded-lg bg-white">
                            <option value="Standard avec viande">Standard avec viande</option>
                            <option value="Pescétarien">Pescétarien</option>
                            <option value="Végétarien">Végétarien</option>
                            <option value="Vegan">Vegan</option>
                        </select>

                        <label class="block text-sm font-medium mt-3">Niveau d'activité</label>
                        <select name="activityLevel" class="w-full border p-3 rounded-lg bg-white">
                            <option value="Faible">Faible</option>
                            <option value="Modéré">Modéré</option>
                            <option value="Élevé">Élevé</option>
                            <option value="Très Haut">Très Haut</option>
                        </select>

                        <!-- Objectif -->
                        <label class="block text-sm font-medium mt-3">Objectif</label>
                        <select name="goal" class="w-full border p-3 rounded-lg bg-white" required>
                            <option value="Perte de poids">Perte de poids</option>
                            <option value="Prendre du poids">Prendre du poids</option>
                            <option value="Stabiliser son poids">Stabiliser son poids</option>
                            <option value="Se Muscler">Se Muscler</option>
                        </select>
                    </div>

                    <!-- Étape 5 : Prévisualisation -->
                    <div class="step fade-in hidden bg-[#F2F2F2] p-6 rounded-lg shadow-md" id="step-5">
                        <h3 class="text-lg font-semibold mb-4">Prévisualisation</h3>
                        <p><strong>Prénom :</strong> <span id="previewFirstName"></span></p>
                        <p><strong>Nom :</strong> <span id="previewLastName"></span></p>
                        <p><strong>Email :</strong> <span id="previewEmail"></span></p>
                        <p><strong>Date de naissance :</strong> <span id="previewBirthDate"></span></p>
                        <p><strong>Ville :</strong> <span id="previewCity"></span></p>
                        <p><strong>Genre :</strong> <span id="previewGender"></span></p>
                    </div>

                    <!-- Boutons de navigation -->
                    <div class="flex justify-between mt-6">
                        <button type="button" id="prevStep"
                            class="hidden bg-gray-500 text-white px-6 py-2 rounded">Précédent</button>
                        <button type="button" id="nextStep" class="bg-[#E30613] text-white px-6 py-2 rounded">
                            Suivant
                        </button>
                        <button type="submit" id="submitBtn"
                            class="hidden bg-[#E30613] text-white px-6 py-2 rounded">S'inscrire</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Script -->
        <script src="/js/multistep.js"></script>

        <!-- Footer -->
        <%- include('partials/footer') %>

</body>

</html>