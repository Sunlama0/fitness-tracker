<nav class="bg-white text-[#4A4A4A] shadow-md">
	<div class="container mx-auto flex justify-between items-center py-4 px-6">
		<!-- Logo -->
		<a href="/" class="text-2xl font-bold text-[#E30613] hover:text-[#4A4A4A] transition duration-300">
			FitnessTracker
		</a>

		<!-- Menu Desktop -->
		<div class="hidden md:flex space-x-6 items-center">
			<% if (user) { %>
				<span class="font-semibold text-[#E30613]">👋 Bonjour, <%= user.firstName %> !</span>
				<a href="/" class="px-4 py-2 rounded hover:bg-[#F2F2F2] transition duration-300">
					🏋️ Tableau de bord
				</a>
				<a href="/workouts" class="px-4 py-2 rounded hover:bg-[#F2F2F2] transition duration-300">
					📋 Mes séances
				</a>
				<a href="/auth/logout"
					class="px-4 py-2 rounded bg-[#E30613] text-white hover:bg-[#C20510] transition duration-300">
					🔒 Déconnexion
				</a>
				<% } else { %>
					<a href="/auth/login"
						class="px-4 py-2 rounded bg-[#E30613] text-white hover:bg-[#C20510] transition duration-300">
						🔑 Connexion
					</a>
					<a href="/auth/register"
						class="px-4 py-2 rounded border border-[#E30613] text-[#E30613] hover:bg-[#E30613] hover:text-white transition duration-300">
						✨ Inscription
					</a>
					<% } %>
		</div>

		<!-- Menu Mobile -->
		<button id="menu-toggle" class="md:hidden text-2xl text-[#E30613]">
			☰
		</button>
	</div>

	<!-- Menu Mobile Dropdown -->
	<div id="mobile-menu" class="hidden md:hidden bg-white shadow-md flex flex-col items-center space-y-4 py-4">
		<% if (user) { %>
			<a href="/" class="px-4 py-2 w-full text-center hover:bg-[#F2F2F2] transition duration-300">
				🏋️ Tableau de bord
			</a>
			<a href="/workouts" class="px-4 py-2 w-full text-center hover:bg-[#F2F2F2] transition duration-300">
				📋 Mes séances
			</a>
			<a href="/auth/logout"
				class="px-4 py-2 w-full text-center bg-[#E30613] text-white hover:bg-[#C20510] transition duration-300">
				🔒 Déconnexion
			</a>
			<% } else { %>
				<a href="/auth/login"
					class="px-4 py-2 w-full text-center bg-[#E30613] text-white hover:bg-[#C20510] transition duration-300">
					🔑 Connexion
				</a>
				<a href="/auth/register"
					class="px-4 py-2 w-full text-center border border-[#E30613] text-[#E30613] hover:bg-[#E30613] hover:text-white transition duration-300">
					✨ Inscription
				</a>
				<% } %>
	</div>

	<script>
		document.getElementById("menu-toggle").addEventListener("click", function () {
			document.getElementById("mobile-menu").classList.toggle("hidden");
		});
	</script>
</nav>